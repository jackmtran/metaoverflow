extends layout.pug
include utils.pug
block content
  div
    table
      thead
      tbody
        div(id=`question-container-${question.id}`).single-question-container
          h1(id=`${question.id}-title`)= question.title
          h2 Question:
          p(id=`${question.id}-content`)= question.question
          if loggedInUser === question.userId
            label Title
            input(type="text" name="title" value=question.title id=`${question.id}-edit-title`)
            label Question
            input(type="text" name="question" value=question.question id=`${question.id}-edit-question`)
            button(class='edit-btn' id=`edit-question-${question.id}`) Edit Question
            button(class='delete-btn' id=`delete-question-${question.id}`) Delete Question
        h2 Submited answers:
        div(id=`answers-container-${answers.id}`).answers-container
          each a in answers
            div(id=`answer-container-${a.id}`).single-answer.container
              h3(id=`${a.id}`)=a.answer
        div(class="answer-btn" id=`answer-question-${question.id}`).answer-area.container
            form(id='answerform' method='POST' action='/answer')
            input(type='text' value= '' id= 'Answer-submit-form')
            input(type='submit' value='Leave Answer' id= 'Answer-submit-btn' onClick="document.location.reload(true)")
