      tbody
        div(id=`question-container-${question.id}`).single-question-container
          h1(id=`${question.id}-title`)= question.title
          h2 Question:
          p(id=`${question.id}-question`)= question.question
          if loggedInUser === question.userId
            button(class='delete-btn' id=`delete-question-${question.id}`) Delete
            button(class="edit-btn" id=`edit-btn-${question.id}`) Edit
            form(id=`edit-form-${question.id}` )
              label Title:
              input(type="text" name="title" value=question.title id=`${question.id}-edit-title`)
              label Question:
              input(type="text" name="question" value=question.question id=`${question.id}-edit-question`)
              button(class="edit-submit" id=`edit-submit-${question.id}`) Submit Edit
