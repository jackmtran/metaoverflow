extends layout.pug
include utils.pug
block content
  div
    table
      thead
      tbody
        div(id=`question-container-${question.id}`).single-question-container
          h1(id=`${question.id}-title`)= question.title
          h2 Question:
          p(id=`${question.id}-content`)= question.question
          if loggedInUser === question.userId
            button(class='delete-btn' id=`delete-question-${question.id}`) Delete
            button(class='edit-btn' id=`edit-question-${question.id}`) Edit
            +field('Title', 'title', question.title)
            +field('Question', 'question', question.question)
        div(id=`answers-container-${answers.id}`).answers-container
        each a in answers
            div(id=`answer-container-${a.id}`).single-answer.container
              h2 Answer
              h3(id=`${a.id}`)=a.answer
              if loggedInUser === answers.userId
        div(class='leave_answer')
          textarea(name="answer_form", cols="50", rows="10")
        a(href='/answer' method='GET'): button.answer-button Submit Answer
