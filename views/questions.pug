extends layout.pug
include utils.pug
block content
  div(class='topq_container')
    head
    body
      div(id='games_container')
        h1 Top Games
        div(id='tft' class='game_container')
          a(href='/categories/1')
            img(src='../images/Teamfight-Tactics-1.jpg' style='width:240px; height:180px;')
        div(id='league' class='game_container')
          a(href='/categories/2')
            img(src='../images/League-of-Legends-2022.jpg' style='width:240px; height:180px;')
        div(id='valorant' class='game_container')
          a(href='/categories/3')
            img(src='../images/IMAGE_4.jpg' style='width:240px; height:180px;')
      div(id="questions-containers").questions-container
        div(id='h1_container')
          h1(id="questionH1") Questions
        div(class='allqs')
          each q in questions
            div(class='spacing' id=`question-container-${q.id}`).single-question-container
              a(class='homeTitles' href=`/questions/${q.id}`) #{q.title}
